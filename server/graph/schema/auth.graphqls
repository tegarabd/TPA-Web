type AuthMutation {
  login(input: LoginUser!): Token! @goField(forceResolver: true) @activated
  register(input: RegisterUser!): Token! @goField(forceResolver: true)
  activate(input: ActivateUser): User! @goField(forceResolver: true)
  verifyForgotPasswordEmail(input: ForgotPasswordEmail): User!
    @goField(forceResolver: true)
  verifyForgotPasswordCode(input: ForgotPasswordCode): User!
    @goField(forceResolver: true)
  resetPassword(input: ResetPassword): User! @goField(forceResolver: true)
}

type Token {
  token: String!
}

type ActivationCode {
  id: ID!
  userId: String!
  code: String!
  expiredAt: Time!
}

type ResetPasswordCode {
  id: ID!
  userId: String!
  code: String!
  expiredAt: Time!
}

input ActivateUser {
  userId: ID!
  code: String!
}

input ForgotPasswordEmail {
  email: String!
}

input ForgotPasswordCode {
  userId: ID!
  code: String!
}

input ResetPassword {
  userId: String!
  password: String!
  confirmPassword: String!
}